{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "core/*": ["core/*"],
      "server/core/*": ["server/core/*"],
      "client/core/*": ["client/core/*"],
      "exceptions/*": ["core/exception/*"]
   },
    "module": "commonjs",
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext", 
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "exclude": [
    "../../node_modules",
    "../../test"
  ]
}
